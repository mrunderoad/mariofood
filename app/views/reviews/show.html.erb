<h1>View Review:</h1>
<h3>Author: <%= @review.author %></h3>
<h3>Rating: <%= @review.rating %> of 5</h3>
<h3>Written Review:</h3>
<p><%= @review.content_body %></p>

<% if is_admin? %>
  <%= link_to "Edit", edit_product_review_path(@product, @review) %>
  <%= link_to "Delete", product_review_path(@product, @review), :data => {:confirm => "really?",
  :method => "delete"} %>
<% end %>

<%= link_to "Return to product", product_path(@product) %>