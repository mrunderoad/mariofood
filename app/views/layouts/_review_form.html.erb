<%= render "layouts/errors", :object => @review %>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :author %>
  <%= f.text_field(:author, :class => 'form-control') %>
  <%= f.label :content_body %>
  <%= f.text_area(:content_body, :class => 'form-control') %>
  <%= f.label :rating %>
  <%= f.number_field :rating, in: 1..5, :class => 'form-control' %>
  <hr>
  <%= f.submit 'Add Review!', :class => "btn btn-success" %>
<% end %>